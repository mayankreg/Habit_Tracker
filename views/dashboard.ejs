<!-- header -->
<header><%- include("navbar.ejs")%></header>

<div class="container">
  <div class="row mt-4 text-primary" style="text-align: center; font-family: cursive; text-decoration: overline underline;">
    <h2>Add Habits here</h2>
  </div>
  
  <!-- this contains text area & add button on new habit page -->
  <div class="row mt-3 mb-3">
    <form action="/habit/create" method="post">
      <div class="row d-flex justify-content-between">
        <div class="col-10">
          <input class="form-control p-3 overflow-hidden fw-light" width="100%" type="text" name="habit" placeholder="Enter habit"/>
        </div>
        <div class="col-2">
          <input class="btn btn-primary p-3" width="100%" type="submit" value="Create Habit"/>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- this the row which is rendered on new habit page containg.. name/ streak/ completed status -->
 <div class="container">
  
  <div class="row border">
    <%if(habits.length > 0){%>
    
      <ol class="list-group list-group-numbered">
      <%for(let habit of habits){%>
        <li class="list-group-item d-flex justify-content-between align-items-start m-2">
        
        <div class="me-auto overflow-hidden">
          <!-- <span class="fw-bold overflow-hidden"><%=habit.description%></span> -->
          <div class="fw-light "><%=habit.description%></div>
          <a href="/habit/delete/<%=habit.id%>">
            <button class="btn btn-danger btn-sm m-3">Delete Habit❌</button>
          </a>
          
          <span class="badge bg-warning rounded-pill m-3 p-2"> Streak👏 : <%=habit.streak%>/7 </span>
          <span class="badge bg-success rounded-pill mx-4 p-2"> Completed✔️ : <%=habit.completed%>/7</span>
        </div>

      </li>
      <%}%>
    </ol>
    
    <%}%>
  </div>
</div>


